@model ProjetoMVC.Models.Livro

@{
    ViewData["Title"] = "Editar Livro";

}

<h1>
    Editar Livro
</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Editar">
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />

            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />

            </div>
             <div class="form-group">
                <label asp-for="Editora" class="control-label"></label>
                <input asp-for="Editora" class="form-control" />

            </div>
             <div class="form-group">
                <label asp-for="Genero" class="control-label"></label>
                <input asp-for="Genero" class="form-control" />

            </div>
            
            <div class="form-group">
                <label asp-for="Reservado" class="control-label"></label>
                <input type=" checkbox" asp-for="Reservado" class="form-check-input" />

            </div>
            <br>
            <div class="form-group">
                <input type="submit" value="Editar" class="btn btn-primary"/>
            </div>
        </form>

    </div>

</div>
</hr>
<br>
<div>
    <a asp-action="Index">Voltar</a>
</div>